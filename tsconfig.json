{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        // 隐式any 类型
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",  // TS文件编译后会放入到此文件夹内
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },

    },
    "include": [
        "src/**/*"
    ]
}
